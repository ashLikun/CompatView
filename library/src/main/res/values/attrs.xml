<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MaxHeightScrollView">
        <attr name="mhsv_heightRatio" format="reference|float" />
        <attr name="mhsv_maxHeight" format="reference|dimension" />
    </declare-styleable>
    <declare-styleable name="MaxHeightLineLayout">
        <attr name="mhl_heightRatio" format="reference|float" />
        <attr name="mhl_maxHeight" format="reference|dimension" />
    </declare-styleable>
    <declare-styleable name="MaxHeightFrameLayout">
        <attr name="mhf_heightRatio" format="reference|float" />
        <attr name="mhf_maxHeight" format="reference|dimension" />
    </declare-styleable>
    <declare-styleable name="FrameScalLayout">
        <attr name="fsl_ratio" format="reference|float" />
        <!--按照那个值为基础-->
        <attr name="fsl_orientation">
            <enum name="width" value="0"></enum>
            <enum name="height" value="1"></enum>
        </attr>
    </declare-styleable>
    <declare-styleable name="LineScalLayout">
        <attr name="lsl_ratio" format="reference|float" />
        <!--按照那个值为基础-->
        <attr name="lsl_orientation">
            <enum name="width" value="0"></enum>
            <enum name="height" value="1"></enum>
        </attr>
    </declare-styleable>
    <declare-styleable name="RelativeScalLayout">
        <attr name="rsl_ratio" format="reference|float" />
        <!--按照那个值为基础-->
        <attr name="rsl_orientation">
            <enum name="width" value="0"></enum>
            <enum name="height" value="1"></enum>
        </attr>
    </declare-styleable>
    <declare-styleable name="ScaleImageView">
        <attr name="sci_ratio" format="reference|float" />
        <!--按照那个值为基础-->
        <attr name="sci_orientation">
            <enum name="width" value="0"></enum>
            <enum name="height" value="1"></enum>
        </attr>
    </declare-styleable>
    <declare-styleable name="ExpandTextView">
        <!--最多展示的行数-->
        <attr name="etv_maxLineCount" format="integer" />
        <!--是否开启动画-->
        <attr name="etv_isAnim" format="boolean" />
        <!--动画时长-->
        <attr name="etv_duration" format="integer" />
        <!--占位末端的文字(汉字)个数-->
        <attr name="etv_endTextNumber" format="integer" />
    </declare-styleable>

    <!--圆形圆角-->
    <declare-styleable name="RoundImageView">
        <!-- 描边宽度-->
        <attr name="riv_border_width" format="dimension" />
        <!-- 描边颜色-->
        <attr name="riv_border_color" format="color" />
        <!--圆角大小-->
        <attr name="riv_corner_radius" format="dimension" />
        <!--左上圆角大小-->
        <attr name="riv_leftTop_corner_radius" format="dimension" />
        <!--右上圆角大小-->
        <attr name="riv_rightTop_corner_radius" format="dimension" />
        <!--左下圆角大小-->
        <attr name="riv_leftBottom_corner_radius" format="dimension" />
        <!--右下圆角大小-->
        <attr name="riv_rightBottom_corner_radius" format="dimension" />
        <!--图片类型：圆角或者圆形-->
        <attr name="riv_type" format="enum">
            <enum name="oval" value="2" />
            <enum name="round" value="1" />
            <enum name="circle" value="0" />
        </attr>
    </declare-styleable>
</resources>