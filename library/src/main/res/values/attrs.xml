<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MaxHeightScrollView">
        <attr name="mhsv_heightRatio" format="reference|float" />
        <attr name="mhsv_maxHeight" format="reference|dimension" />
    </declare-styleable>
    <declare-styleable name="MaxHeightLineLayout">
        <attr name="mhl_heightRatio" format="reference|float" />
        <attr name="mhl_maxHeight" format="reference|dimension" />
    </declare-styleable>
    <declare-styleable name="MaxHeightFrameLayout">
        <attr name="mhf_heightRatio" format="reference|float" />
        <attr name="mhf_maxHeight" format="reference|dimension" />
    </declare-styleable>
    <declare-styleable name="FrameScalLayout">
        <attr name="fsl_ratio" format="reference|float" />
        <!--按照那个值为基础-->
        <attr name="fsl_orientation">
            <enum name="width" value="0"></enum>
            <enum name="height" value="1"></enum>
        </attr>
    </declare-styleable>
    <declare-styleable name="LineScalLayout">
        <attr name="lsl_ratio" format="reference|float" />
        <!--按照那个值为基础-->
        <attr name="lsl_orientation">
            <enum name="width" value="0"></enum>
            <enum name="height" value="1"></enum>
        </attr>
    </declare-styleable>
    <declare-styleable name="RelativeScalLayout">
        <attr name="rsl_ratio" format="reference|float" />
        <!--按照那个值为基础-->
        <attr name="rsl_orientation">
            <enum name="width" value="0"></enum>
            <enum name="height" value="1"></enum>
        </attr>
    </declare-styleable>
    <declare-styleable name="ScaleImageView">
        <attr name="sci_ratio" format="reference|float" />
        <!--按照那个值为基础-->
        <attr name="sci_orientation">
            <enum name="width" value="0"></enum>
            <enum name="height" value="1"></enum>
        </attr>
    </declare-styleable>
    <declare-styleable name="ExpandTextView">
        <!--最多展示的行数-->
        <attr name="etv_maxLineCount" format="integer" />
        <!--是否开启动画-->
        <attr name="etv_isAnim" format="boolean" />
        <!--动画时长-->
        <attr name="etv_duration" format="integer" />
        <!--占位末端的文字(汉字)个数-->
        <attr name="etv_endTextNumber" format="integer" />
    </declare-styleable>
    <!--LabelView-->
    <declare-styleable name="LabelView">
        <!--Label 的背景颜色-->
        <attr name="lv_backgroundColor" format="color" />
        <!--第一行文字的颜色，如果 Label 作为单行（不设置textTitle）则无效-->
        <attr name="android:textColor" />
        <!--第二行文字的颜色-->
        <attr name="lv_textContentColor" format="color" />
        <!--第一行文字的内容，如果文字过长注意调节 labelTopPadding 的值变大，单行 Label 时不要设置此值-->
        <attr name="android:text" />
        <!--第二行文字的内容，单行显示时推荐用此-->
        <attr name="lv_textContent" format="string" />
        <!--第一行文字的大小，默认10sp，如果 Label 作为单行（不设置textTitle）则无效-->
        <attr name="android:textSize" />
        <!--第二行文字的大小，默认12sp-->
        <attr name="lv_textContentSize" format="dimension" />
        <!--第一行文字上边缘距离背景顶部（注意三角形或者梯形）的偏移量，默认为15dp-->
        <attr name="lv_labelTopPadding" format="dimension" />
        <!--第一行文字底部与第二行文字顶部之间的偏移距离-->
        <attr name="lv_labelCenterPadding" format="dimension" />
        <!--textContent 文字与 Label 背景底部的空隙距离，默认为 10dp-->
        <attr name="lv_labelBottomPadding" format="dimension" />
        <!--当设置该值大于0时显示的 Label 为梯形的样式，梯形上顶宽度与该值成正比；当不设置时 Label 为三角形样式-->
        <attr name="lv_labelTopDistance" format="dimension" />
        <!--第一行文字的样式，normal、italic、bold，如果 Label 作为单行（不设置textTitle）则无效-->
        <attr name="lv_textTitleStyle">
            <enum name="normal" value="0" />
            <enum name="italic" value="1" />
            <enum name="bold" value="2" />
        </attr>
        <!--第二行文字的样式，normal、italic、bold-->
        <attr name="lv_textContentStyle">
            <enum name="normal" value="0" />
            <enum name="italic" value="1" />
            <enum name="bold" value="2" />
        </attr>
        <!--Label 的位置，leftTop 或者 rightTop-->
        <attr name="lv_direction">
            <enum name="leftTop" value="-45" />
            <enum name="rightTop" value="45" />
        </attr>
        <!--圆角半径-->
        <attr name="lv_labelRadius" format="dimension" />
    </declare-styleable>
</resources>